    },
    "item": [
      {
        "name": "Login",
        "request": {
          "method": "POST",
          "header": [
            {
              "key": "Content-Type",
              "value": "application/json"
            }
          ],
          "body": {
            "mode": "raw",
            "raw": "{\n  \"email\": \"admin@admin.com\",\n  \"password\": \"admin\"\n}"
          },
          "url": {
            "raw": "http://localhost:3000/api/login",
            "protocol": "http",
            "host": ["localhost"],
            "port": "3000",
            "path": ["api", "login"]
          }
        },
        "response": []
      },
      {
        "name": "Get Users",
