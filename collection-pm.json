    "event": [
      {
        "listen": "prerequest",
        "script": {
          "exec": [
            "pm.environment.set(\"token\", pm.response.json().token);"
          ]
        }
      },
      {
        "listen": "test",
        "script": {
          "exec": [
            "if (pm.response.code === 200 && pm.request.url.path[1] === \"login\") {",
            "  const jsonData = pm.response.json();",
            "  pm.environment.set(\"token\", jsonData.token);",
            "}"
          ]
        }
      }
    ]
